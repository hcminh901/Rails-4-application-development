<h1>Listing pins</h1>

<table id="posts">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="page">
    <% @pins.each do |pin| %>
      <tr class="post">
        <td><%= pin.name %></td>
        <td><%= image_tag pin.image.thumb %>
          <p>
            <strong>Board:</strong>
            <%= pin.board.title %><br>
            <%= pin.board.description %>
          </p>
        </td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %><br>
<%= paginate @pins %>